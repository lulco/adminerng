{block content}

<div class="row">
	<div class="col-lg-2">
		{control databaseSelect}
	</div>
	<div class="col-lg-10">
		<div class="row">
			<div class="col-lg-12">
				{control filterForm}
			</div>
		</div>
		<div class="row">
			<div class="col-lg-10">
				<h3>{$itemsTitles[$type]} ({$itemsCount})</h3>
			</div>
			<div class="col-lg-2">
				<div n:if="$actualDriver->permissions()->canCreateItem($database, $type, $table)" class="pull-right">
					<a class="btn btn-default" style="margin-right: 20px;" href="{link Item:create, $driver, $database, $type, $table}">Create new</a>
				</div>
			</div>
		</div>
		<table class="table text-nowrap">
			<thead n:if="isset($itemsHeaders[$type]) && $itemsHeaders[$type]">
				<tr>
					<th n:if="$actualDriver->permissions()->canEditItem($database, $type, $table)"></th>
					<th n:foreach="$itemsHeaders[$type] as $itemHeader">{$itemHeader}</th>
				</tr>
			</thead>
			<tbody>
				<tr n:foreach="$items as $key => $values">
					<td n:if="$actualDriver->permissions()->canEditItem($database, $type, $table, $key)"><a href="{link Item:edit, $driver, $database, $type, $table, $key}">Change</a></td>
					<td n:foreach="$values as $value" title="{if is_null($value)}NULL{else}{$value}{/if}">{if is_null($value)}<i>NULL</i>{else}{$value|truncate:100}{/if}</td>
				</tr>
			</tbody>
		</table>
		{control paginator}
	</div>
</div>
