{block content}

<div class="col-lg-2">
	{control databaseSelect}
</div>
<div class="col-lg-10">
	<div class="row">
		<div class="col-lg-10">
			<h3>{_$driver . '.database_select_control.database.label'} ({count($databases)|formatNumber})</h3>
		</div>
		<div class="col-lg-2">
			<div n:if="$actualDriver->permissions()->canCreateDatabase()" class="pull-right">
				<a class="btn btn-default" style="margin-right: 20px;" href="{link Database:create, $driver}">Create new</a>
			</div>
		</div>
	</div>
	<table class="table text-nowrap">
		{include '../../../components/ListingTableHeader/default.latte', 'columns' => $databasesHeaders}
		<tbody>
			<tr n:foreach="$databases as $database => $databaseInfo">
				<td>
					<div class="btn-group">
						<a href="{link List:tables, $driver, $database}" class="btn-default" title="{$database}"><i class="fa fa-eye"></i></a>
						<a n:if="$actualDriver->permissions()->canEditDatabase()" href="{link List:tables, $driver, $database}" class="btn-default" title="{$database}"><i class="fa fa-edit"></i></a>
					</div>
				</td>
				{foreach $databasesHeaders as $column}
					{php $value = isset($databaseInfo[$column->getKey()]) ? $databaseInfo[$column->getKey()] : null}
					<td n:class="$column->isNumeric() ? 'text-right'">{if is_null($value)}<i>NULL</i>{else}{if $column->isNumeric()}{$value|formatNumber, $column->getDecimals()}{else}{$value|truncate:100}{/if}{/if}</td>
				{/foreach}
			</tr>
		</tbody>
	</table>
</div>
